
<%= stylesheet_link_tag 'books-index.css' %>
<p id="notice"><%= notice %></p>


<div class="books-content">
  <div class="Left-tab">
  <%if current_user && current_user.admin%>
  <div class = "coluna-botoes">
  <li><%=link_to 'Adicionar novo livro', new_book_path%></li>
    <li><%=link_to 'Adicionar nova tag', new_tag_path%></li>
   </div>

<%end%>
  </div>
  <div class="book-box">
    <% @books.each do |book| %>
      <div class="Card-Book">
        <div class="image">
          <%=link_to image_tag(book.image, style: 'width:100%;border-radius:20px;height:100%'),book %>
        </div>
        <div class = "books-titulo">
        <%=book.titulo %>
        </div>
      </div>
    <% end %>
  </div>
</div>